{
    "compilerOptions": {
        "composite": true,

        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2021",

        "types": ["node"],

        "sourceMap": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        "strict": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
    },
    "include": ["src"]
}

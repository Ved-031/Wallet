generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id                  Int                  @id @default(autoincrement())
    clerkId             String               @unique
    email               String               @unique
    name                String?
    avatar              String?
    transactions        Transaction[]
    groupsCreated       Group[]              @relation("GroupCreator")
    groupMembers        GroupMember[]
    paidExpenses        Expense[]            @relation("ExpensePayer")
    expenseParticipants ExpenseParticipant[]
    createdAt           DateTime             @default(now())
    updatedAt           DateTime             @updatedAt

    @@index([clerkId])
}

enum TransactionType {
    INCOME
    EXPENSE
}

model Transaction {
    id        Int             @id @default(autoincrement())
    userId    Int
    user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
    title     String
    amount    Decimal
    type      TransactionType
    category  String?
    createdAt DateTime        @default(now())
    updatedAt DateTime        @updatedAt

    @@index([userId])
}

model Group {
    id        Int           @id @default(autoincrement())
    name      String
    createdBy Int
    creator   User          @relation("GroupCreator", fields: [createdBy], references: [id], onDelete: Cascade)
    members   GroupMember[]
    expenses  Expense[]
    createdAt DateTime      @default(now())
    updatedAt DateTime      @updatedAt
}

enum GroupRole {
    ADMIN
    MEMBER
}

model GroupMember {
    userId  Int
    groupId Int
    role    GroupRole @default(MEMBER)
    user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    group   Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)

    @@id([userId, groupId])
}

model Expense {
    id           Int                  @id @default(autoincrement())
    groupId      Int
    paidBy       Int
    description  String
    amount       Decimal
    group        Group                @relation(fields: [groupId], references: [id], onDelete: Cascade)
    payer        User                 @relation("ExpensePayer", fields: [paidBy], references: [id])
    participants ExpenseParticipant[]
    createdAt    DateTime             @default(now())
    updatedAt    DateTime             @updatedAt

    @@index([groupId])
}

model ExpenseParticipant {
    expenseId Int
    userId    Int
    share     Decimal
    paidShare Decimal @default(0)
    expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
    user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([expenseId, userId])
}

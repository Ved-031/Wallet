generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id                  Int                  @id @default(autoincrement())
    clerkId             String               @unique
    email               String               @unique
    name                String?
    avatar              String?
    transactions        Transaction[]
    groupsCreated       Group[]              @relation("GroupCreator")
    groupMembers        GroupMember[]
    paidExpenses        Expense[]            @relation("ExpensePayer")
    expenseParticipants ExpenseParticipant[]
    sentSettlements     Settlement[]         @relation("SettlementPayer")
    receivedSettlements Settlement[]         @relation("SettlementReceiver")
    sentInvites         GroupInvite[]        @relation("SentInvites")
    receivedInvites     GroupInvite[]        @relation("ReceivedInvites")
    notifications       Notification[]
    createdAt           DateTime             @default(now())
    updatedAt           DateTime             @updatedAt

    @@index([clerkId])
}

enum TransactionType {
    INCOME
    EXPENSE
}

model Transaction {
    id        Int             @id @default(autoincrement())
    userId    Int
    user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
    title     String
    amount    Decimal
    type      TransactionType
    category  String?
    createdAt DateTime        @default(now())
    updatedAt DateTime        @updatedAt

    @@index([userId])
}

model Group {
    id          Int           @id @default(autoincrement())
    name        String
    createdBy   Int
    creator     User          @relation("GroupCreator", fields: [createdBy], references: [id], onDelete: Cascade)
    members     GroupMember[]
    expenses    Expense[]
    settlements Settlement[]
    invites     GroupInvite[]
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
}

enum GroupRole {
    ADMIN
    MEMBER
}

model GroupMember {
    userId  Int
    groupId Int
    role    GroupRole @default(MEMBER)
    user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    group   Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)

    @@id([userId, groupId])
}

model Expense {
    id           Int                  @id @default(autoincrement())
    groupId      Int
    paidBy       Int
    description  String
    amount       Decimal
    group        Group                @relation(fields: [groupId], references: [id], onDelete: Cascade)
    payer        User                 @relation("ExpensePayer", fields: [paidBy], references: [id])
    participants ExpenseParticipant[]
    createdAt    DateTime             @default(now())
    updatedAt    DateTime             @updatedAt

    @@index([groupId])
}

model ExpenseParticipant {
    expenseId Int
    userId    Int
    share     Decimal
    paidShare Decimal @default(0)
    expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
    user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([expenseId, userId])
}

model Settlement {
    id        Int      @id @default(autoincrement())
    groupId   Int
    paidBy    Int
    paidTo    Int
    amount    Decimal
    note      String?
    group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
    payer     User     @relation("SettlementPayer", fields: [paidBy], references: [id])
    receiver  User     @relation("SettlementReceiver", fields: [paidTo], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([groupId])
}

model GroupInvite {
    id            Int          @id @default(autoincrement())
    groupId       Int
    invitedBy     Int
    invitedUserId Int
    status        InviteStatus @default(PENDING)
    group         Group        @relation(fields: [groupId], references: [id], onDelete: Cascade)
    inviter       User         @relation("SentInvites", fields: [invitedBy], references: [id])
    invited       User         @relation("ReceivedInvites", fields: [invitedUserId], references: [id])
    createdAt     DateTime     @default(now())

    @@unique([groupId, invitedUserId])
}

enum InviteStatus {
    PENDING
    ACCEPTED
    DECLINED
}

model Notification {
    id        Int              @id @default(autoincrement())
    userId    Int
    type      NotificationType
    title     String
    message   String
    read      Boolean          @default(false)
    user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt DateTime         @default(now())
}

enum NotificationType {
    GROUP_INVITE
    INVITE_ACCEPTED
    INVITE_DECLINED
    SETTLEMENT
}
